<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="55dip">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/pushReceivedImage"
        android:src="@mipmap/red_operational_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rich Push Message"
        android:textSize="17dip"
        android:layout_toRightOf="@+id/pushReceivedImage"
        android:layout_toEndOf="@+id/pushReceivedImage"
        android:layout_centerVertical="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:id="@+id/listItem"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35 Minutes"
        android:textSize="17dip"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:layout_toRightOf="@+id/listItem"
        android:layout_toEndOf="@+id/listItem"
        android:layout_centerVertical="true"/>
</RelativeLayout>